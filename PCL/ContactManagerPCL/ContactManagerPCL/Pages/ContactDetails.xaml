<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactManagerPCL.Pages.ContactDetails"
             Title="Contact details">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="OnSaveClick"></ToolbarItem>
        <ToolbarItem Text="Delete" Clicked="OnDeleteClick"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <Label Text="First Name"></Label>
            <Entry x:Name="FirstNameeEntry"></Entry>
            <Label Text="Last Name"></Label>
            <Entry x:Name="LastNameEntry"></Entry>
            <Label Text="Telephone number"></Label>
            <Entry x:Name="TelephoneNumberEntry"></Entry>
            <Label Text="Email"></Label>
            <Entry x:Name="EmailEntry"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>